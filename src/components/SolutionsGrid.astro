---
const items = [
  { title: "Estantería", slug: "estanterias", img: "/images/solutions/solutions-estanterias.jpg", imgAlt: "Sistemas de estantería industrial" },
  { title: "Grúas", slug: "gruas", img: "/images/solutions/solutions-gruas.jpeg", imgAlt: "Grúas industriales" },
  { title: "Transportadores", slug: "transportadores", img: "/images/solutions/solutions-transportadores.jpeg", imgAlt: "Sistemas de transportadores" },
  { title: "Mesas Elevadoras", slug: "mesas-elevadoras", img: "/images/solutions/solutions-mesas.jpg", imgAlt: "Mesas elevadoras industriales" },
  { title: "Contenedores", slug: "contenedores", img: "/images/solutions/solutions-contenedores.jpeg", imgAlt: "Contenedores industriales" },
  { title: "Andenes", slug: "andenes", img: "/images/solutions/solutions-andenes.jpeg", imgAlt: "Andenes de carga" },
  { title: "Integraciones", slug: "integraciones", img: "/images/solutions/solutions-integraciones.jpeg", imgAlt: "Integración de sistemas industriales" },
  { title: "Inspecciones", slug: "inspecciones", img: "/images/solutions/solutions-inspecciones.jpeg", imgAlt: "Inspecciones de seguridad industrial" },
];
---

<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
  {items.map((item) => (
    <a
      href={`/soluciones/${item.slug}`}
      class="group block rounded-[28px] bg-[#d9d7cf] p-4 shadow-sm transition
             hover:bg-[#169061] hover:-translate-y-1 hover:shadow-lg"
    >
      <!-- Imagen -->
      <div class="overflow-hidden rounded-[22px] bg-gray-200">
        <div class="aspect-4/3 w-full">
          <img
            src={item.img}
            alt={item.imgAlt}
            class="h-full w-full object-cover transition-transform duration-300
                   group-hover:scale-105"
            loading="lazy"
          />
        </div>
      </div>

      <!-- Texto -->
      <div class="pt-3 text-center transition-colors group-hover:text-white">
        <h3 class="text-base font-extrabold">
          {item.title}
        </h3>

        <span
          class="mt-1 inline-block text-sm font-medium underline underline-offset-4
                 decoration-current opacity-90"
        >
          Ver más
        </span>
      </div>
    </a>
  ))}
</div>
