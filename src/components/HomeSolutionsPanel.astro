---
import SolutionsGrid from "./SolutionsGrid.astro";
import LogoCarousel from "./LogoCarousel.astro";
---

<section id="soluciones" class="bg-white text-gray-900">
  <div class="mx-auto max-w-7xl px-6 py-10">
    <div class="grid gap-10 lg:grid-cols-[1fr_420px]">
      <!-- Izquierda: cards -->
      <SolutionsGrid />

      <!-- Derecha: panel -->
      <aside class="space-y-10">
        <div class="space-y-4">
          <h3 class="text-2xl font-extrabold text-gray-900">Te apoyamos en:</h3>

          <ul class="space-y-3 text-lg text-gray-900">
            <li class="flex items-start gap-3">
              <span class="mt-1 text-[#169061]">✓</span>
              <span>Apertura de plantas nuevas.</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="mt-1 text-[#169061]">✓</span>
              <span>Aumento de demanda.</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="mt-1 text-[#169061]">✓</span>
              <span>Proyectos de mejora continua.</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="mt-1 text-[#169061]">✓</span>
              <span>Evaluaciones de seguridad industrial.</span>
            </li>
          </ul>

          <a
            href="#contacto"
            class="mt-4 inline-flex w-full items-center justify-center rounded-md bg-[#169061] px-6 py-3
                   text-lg font-extrabold text-white transition hover:bg-[#137e55]"
          >
            Hablar con un experto
          </a>
        </div>

        <div class="space-y-4">
          <h3 class="text-2xl font-extrabold text-gray-900">
            Representantes Autorizados de Fábrica
          </h3>

          <!-- Puedes dejar el carrusel o cambiarlo por grid de logos si el PPT es estático -->
          <LogoCarousel />
        </div>
      </aside>
    </div>
  </div>
</section>
