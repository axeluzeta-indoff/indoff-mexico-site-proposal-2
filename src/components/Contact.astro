---
const phone = "(664) 625 1114";
const phoneHref = "tel:+526646251114";
const email = "mexico@indoff.com";
const emailHref = "mailto:mexico@indoff.com";
const address = "Privada Bugambilia 20209, 22216 Tijuana B.C., México";
const hours = "Lunes a Viernes · 8:00 am – 4:30 pm";
const mapSrc =
  "https://www.google.com/maps?q=Privada%20Bugambilia%2020209%2C%2022216%20Tijuana%20B.C.%2C%20México&output=embed";
---

<section id="contacto" data-animate="right" class="bg-[#169061] text-white">
  <div class="mx-auto max-w-7xl px-6 py-20">

    <!-- Header -->
    <div class="mb-16 text-center">
      <h2 class="text-4xl font-extrabold tracking-tight md:text-5xl">
        Conversemos sobre tu proyecto
      </h2>
      <p class="mt-4 text-xl text-white/90">
        Nuestro equipo está listo para ayudarte a encontrar la mejor solución
      </p>
    </div>

    <div class="grid gap-12 lg:grid-cols-2">

      <!-- IZQUIERDA -->
      <div class="space-y-10">

        <!-- Contacto + horario -->
        <div class="rounded-[28px] bg-white/10 p-8 backdrop-blur-sm ring-1 ring-white/15">
          <h3 class="mb-6 text-2xl font-extrabold">
            Contáctanos directamente
          </h3>

          <div class="space-y-5">

            <!-- Teléfono -->
            <div class="flex items-start gap-4">
              <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-[#EEC028]">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none"
                  stroke="currentColor" stroke-width="2.5" stroke-linecap="round"
                  stroke-linejoin="round" class="h-6 w-6 text-gray-900">
                  <path d="M13.832 16.568a1 1 0 0 0 1.213-.303l.355-.465A2 2 0 0 1 17 15h3a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2A18 18 0 0 1 2 4a2 2 0 0 1 2-2h3a2 2 0 0 1 2 2v3a2 2 0 0 1-.8 1.6l-.468.351a1 1 0 0 0-.292 1.233 14 14 0 0 0 6.392 6.384"/>
                </svg>
              </div>
              <div>
                <p class="text-sm text-white/80">Teléfono</p>
                <a href={phoneHref} class="text-lg font-bold hover:text-[#EEC028]">
                  {phone}
                </a>
              </div>
            </div>

            <!-- Email -->
            <div class="flex items-start gap-4">
              <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-[#EEC028]">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none"
                  stroke="currentColor" stroke-width="2.5" stroke-linecap="round"
                  stroke-linejoin="round" class="h-6 w-6 text-gray-900">
                  <path d="m22 7-8.991 5.727a2 2 0 0 1-2.009 0L2 7"/>
                  <rect x="2" y="4" width="20" height="16" rx="2"/>
                </svg>
              </div>
              <div>
                <p class="text-sm text-white/80">Email</p>
                <a href={emailHref} class="text-lg font-bold hover:text-[#EEC028]">
                  {email}
                </a>
              </div>
            </div>

            <!-- Ubicación -->
            <div class="flex items-start gap-4">
              <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-[#EEC028]">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none"
                  stroke="currentColor" stroke-width="2.5" stroke-linecap="round"
                  stroke-linejoin="round" class="h-6 w-6 text-gray-900">
                  <path d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0"/>
                  <circle cx="12" cy="10" r="3"/>
                </svg>
              </div>
              <div>
                <p class="text-sm text-white/80">Ubicación</p>
                <p class="text-lg font-bold">{address}</p>
              </div>
            </div>

            <!-- Horario -->
            <div class="border-t border-white/15 pt-5">
              <p class="text-sm text-white/80">Horario de atención</p>
              <p class="mt-1 text-lg font-bold">{hours}</p>
            </div>
          </div>
        </div>

        <!-- Mapa -->
        <div class="rounded-[28px] border-2 border-white/20 p-8">
          <h3 class="mb-4 text-xl font-extrabold">Cómo llegar</h3>

          <div class="overflow-hidden rounded-[22px] bg-white/10 ring-1 ring-white/15">
            <div class="aspect-video w-full">
              <iframe
                title="Mapa - Indoff México"
                src={mapSrc}
                class="h-full w-full"
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
              />
            </div>
          </div>
        </div>

      </div>

      <!-- DERECHA: FORM -->
      <div class="rounded-[28px] bg-white p-8 text-gray-900 shadow-xl lg:p-10">
        <h3 class="mb-6 text-2xl font-extrabold text-[#169061]">
          Envíanos un mensaje
        </h3>

        <form class="space-y-5">
          <div>
            <label class="mb-2 block text-sm font-bold">Nombre completo *</label>
            <input type="text" required placeholder="Juan Pérez"
              class="w-full rounded-lg border-2 border-gray-200 px-4 py-3 focus:border-[#169061] outline-none" />
          </div>

          <div class="grid gap-5 sm:grid-cols-2">
            <div>
              <label class="mb-2 block text-sm font-bold">Email *</label>
              <input type="email" required placeholder="juan@empresa.com"
                class="w-full rounded-lg border-2 border-gray-200 px-4 py-3 focus:border-[#169061] outline-none" />
            </div>

            <div>
              <label class="mb-2 block text-sm font-bold">Teléfono *</label>
              <input type="tel" required placeholder="(664) 123 4567"
                class="w-full rounded-lg border-2 border-gray-200 px-4 py-3 focus:border-[#169061] outline-none" />
            </div>
          </div>

          <div>
            <label class="mb-2 block text-sm font-bold">Empresa</label>
            <input type="text" placeholder="Nombre de tu empresa"
              class="w-full rounded-lg border-2 border-gray-200 px-4 py-3 focus:border-[#169061] outline-none" />
          </div>

          <div>
            <label class="mb-2 block text-sm font-bold">Cuéntanos sobre tu proyecto *</label>
            <textarea rows="4" required
              class="w-full rounded-lg border-2 border-gray-200 px-4 py-3 focus:border-[#169061] outline-none"></textarea>
          </div>

          <button
            type="submit"
            class="w-full rounded-lg bg-[#169061] px-8 py-4 text-lg font-bold text-white transition hover:bg-[#137e55]"
          >
            Enviar mensaje
          </button>

          <p class="text-center text-sm text-gray-500">
            Responderemos lo antes posible
          </p>
        </form>
      </div>
    </div>
  </div>
</section>

