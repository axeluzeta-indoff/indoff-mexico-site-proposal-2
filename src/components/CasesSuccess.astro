---
import { CASES_SUCCESS } from "../data/casesSuccess";

const steps = [
  { title: "Diagnóstico", desc: "Levantamiento + objetivos de operación." },
  { title: "Ingeniería", desc: "Layout, selección y especificación." },
  { title: "Implementación", desc: "Instalación, integración, pruebas." },
  { title: "Soporte", desc: "Acompañamiento y mejora continua." },
];

const cases = CASES_SUCCESS;
---

<section id="casos-exito" data-animate="left" class="bg-white text-gray-900">
  <div class="mx-auto max-w-7xl px-6 py-20">
    <!-- Header -->
    <div class="text-center">
      <h2 class="text-5xl font-extrabold tracking-tight text-[#169061]">
        Casos de éxito
      </h2>
      <p class="mx-auto mt-4 max-w-3xl text-lg text-gray-700">
        Proyectos reales de integración. Menos ruido, más operación.
      </p>
    </div>

    <!-- Timeline / Proceso -->
    <div class="mt-14 rounded-[28px] bg-[#d9d7cf] p-8">
      <div class="flex flex-col gap-6 lg:flex-row lg:items-center lg:justify-between">
        {steps.map((s, i) => (
          <div class="flex-1">
            <div class="flex items-center gap-3">
              <div class="flex h-10 w-10 items-center justify-center rounded-full bg-[#169061] text-white font-extrabold">
                {i + 1}
              </div>
              <div class="text-xl font-extrabold text-gray-900">{s.title}</div>
            </div>
            <p class="mt-3 text-gray-700 leading-relaxed">
              {s.desc}
            </p>
          </div>
        ))}
      </div>

      <div class="mt-8 flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
        <p class="text-gray-800 font-semibold">
          ¿Quieres que tu operación se vea así de ordenada?
        </p>

        <a
          href="#contacto"
          class="inline-flex items-center justify-center rounded-xl bg-[#169061] px-8 py-4 text-lg font-extrabold text-white transition hover:bg-[#137e55]"
        >
          Hablar con un experto
        </a>
      </div>
    </div>

    <!-- Grid de casos -->
    <div class="mt-14 grid gap-10 lg:grid-cols-3">
      {cases.map((c) => (
        <article
          class="group overflow-hidden rounded-[28px] bg-white shadow-md ring-1 ring-black/5 transition
                hover:bg-[#169061] hover:-translate-y-1 hover:shadow-lg"
        >
          <!-- Imagen -->
          <div class="aspect-4/3 w-full overflow-hidden bg-gray-200">
            <img
              src={c.heroImage}
              alt={c.heroAlt}
              class="h-full w-full object-cover transition-transform duration-300
                    group-hover:scale-105"
              loading="lazy"
            />
          </div>

          <!-- Contenido -->
          <div class="p-8 transition-colors group-hover:text-white">
            <div class="inline-flex rounded-full bg-[#EEC028] px-3 py-1 text-sm font-bold text-gray-900">
              {c.tag}
            </div>

            <h3 class="mt-4 text-2xl font-extrabold">
              {c.title}
            </h3>

            <p class="mt-3 leading-relaxed opacity-90">
              {c.summary}
            </p>

            <ul class="mt-4 space-y-2 opacity-90">
              {c.bullets.map((b) => (
                <li class="flex items-start gap-2">
                  <span class="mt-2 h-2 w-2 rounded-full bg-current"></span>
                  <span>{b}</span>
                </li>
              ))}
            </ul>

            <a
              href={`/casos-de-exito/${c.slug}`}
              class="mt-6 inline-block font-bold underline underline-offset-4
                    decoration-current opacity-90"
            >
              Ver cómo lo logramos
            </a>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
